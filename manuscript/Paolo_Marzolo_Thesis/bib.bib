	shortjournal = {Front. Neural Circuits},
	author = {Singheiser, Martin and Gutfreund, Yoram and Wagner, Hermann},
	urldate = {2024-11-02},
	date = {2012-07-11},
	note = {Publisher: Frontiers},
	keywords = {Sound Localization, adaptation, auditory, central nucleus of the inferior colliculus, exported, frequency tuning, interaural level difference, interaural time difference, plasticity},
