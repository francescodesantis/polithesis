@article{pollakTimeTradedIntensity1988,
	title = {Time is traded for intensity in the bat's auditory system},
	volume = {36},
	issn = {0378-5955},
	url = {https://www.sciencedirect.com/science/article/pii/0378595588900548},
	doi = {10.1016/0378-5955(88)90054-8},
	abstract = {Disparities in time and intensity are the two chief cues animals use for localizing a sound source in space. Echolocating bats belonging to the family Molossidae emit brief, ultrasonic signals for orientation that sweep downward about an octave over the duration of the pulse. Due to acoustic shadowing and the directional properties of the ears, pronounced interaural intensity disparities are created that vary as a function of azimuth. However, due to the small headwidth of these animals, azimuthal changes create small interaural time disparities that are at most 30 μs. The experiments in this report are concerned with the binaural processing of time and intensity disparities using brief {FM} signals that simulate the animal's natural echolocation calls. Binaural neurons receiving excitation from one ear and inhibition from the other (E-I neurons) were recorded from the inferior colliculus of Mexican free-tailed bats. The majority of units sampled were highly sensitive for temporal disparities of 100–300 μs, and a few had significant changes in discharge probability when interaural time was changed by 10–20 μs. However, all E-I neurons were also sensitive to intensity disparities. With only one exception, all E-I neurons traded time for intensity. On the average, each decibel difference in intensity could be compensated for by advancing or delaying the inhibitory sound by 47 μs. The main conclusion is that the auditory system processes interaural disparities by transforming level differences at the two ears into latency differences. Thus the discharge probability of each binaural neuron is determined largely by the arrival times of the discharges from the excitatory and inhibitory ears. In view of the substantial time-intensity trading ratios, the small interaural time disparities produced by azimuthal locations off the midline play no role in shaping the response properties of these neurons. Specific examples of how time-intensity trades can translate into a high spatial selectivity are presented.},
	pages = {107--124},
	number = {2},
	journaltitle = {Hearing Research},
	shortjournal = {Hearing Research},
	author = {Pollak, George D},
	urldate = {2024-11-02},
	date = {1988-11-01},
	keywords = {Inferior colliculus, Interaural disparities, Time-intensity trade, exported},
}

@article{driscollNeuroanatomyInferiorColliculu2023,
