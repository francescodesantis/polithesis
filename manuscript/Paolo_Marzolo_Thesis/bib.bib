	date = {2018-03-06},
	note = {Publisher: Frontiers},
	keywords = {Binaural model, Cochlear Nucleus, Computational Neurosciences, artificial neural network, binaural hearing, inner ear model, medial superior olive, spacial hearing, spiking neural networks, toread},
}

@article{wunderlichDemonstratingAdvantagesNeuromorphic2019,
